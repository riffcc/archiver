{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "librarian",
  "version": "0.1.0",
  "identifier": "cc.riff.librarian",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Librarian - Riff.CC Media Archive",
        "width": 2560,
        "height": 1440,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1280,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
